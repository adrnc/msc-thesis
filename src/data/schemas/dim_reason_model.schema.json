{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/adrnc/msc-thesis/refs/heads/main/src/data/schema/dim_reason_model.schema.json",
    "title": "DimReasonModel dataset",
    "description": "",
    "type": "object",
    "additionalProperties": false,
    "required": ["fact_definitions", "cases"],
    "properties": {
        "fact_definitions": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["id", "description", "strengthens_side", "min_value", "max_value"],
                "properties": {
                    "id": { "type": "string", "pattern": "^fact[0-9]+_(defendant|plaintiff)$" },
                    "description": { "type": "string" },
                    "strengthens_side": { "enum": ["defendant", "plaintiff"] },
                    "min_value": { "type": "integer" },
                    "max_value": { "type": "integer", "minimum": "1/min_value" }
                },
                "if": {
                    "properties": {
                        "strengthens_side": { "const": "defendant" }
                    }
                },
                "then": {
                    "properties": {
                        "id": { "type": "string", "pattern": "_defendant$" }
                    }
                },
                "else": {
                    "properties": {
                        "id": { "type": "string", "pattern": "_plaintiff$" }
                    }
                }
            }
        },
        "cases": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["id", "description", "winner", "facts"],
                "properties": {
                    "id": { "type": "string", "pattern": "^case[0-9]+_(defendant|plaintiff)$" },
                    "description": { "type": "string" },
                    "winning_side": { "enum": ["defendant", "plaintiff"] },
                    "facts": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "additionalProperties": false,
                            "required": ["referenced_fact_id", "value", "used_for_reason"],
                            "properties": {
                                "referenced_fact_id": { "type": "string", "pattern": "^fact[0-9]+_(defendant|plaintiff)$" },
                                "value": { "type": "integer" },
                                "used_for_reason": { "type": "boolean" }
                            }
                        }
                    },
                    "if": {
                        "properties": {
                            "winning_side": { "const": "defendant" }
                        }
                    },
                    "then": {
                        "properties": {
                            "facts": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "if": {
                                        "properties": {
                                            "used_for_reason": { "const": true }
                                        }
                                    },
                                    "then": {
                                        "required": ["reason_value"],
                                        "if": {
                                            "properties": {
                                                "referenced_fact_id": { "type": "string", "pattern": "_defendant$" }
                                            }
                                        },
                                        "then": {
                                            "properties": {
                                                "reason_value": { "type": "integer", "maximum": "1/value" }
                                            }
                                        },
                                        "else": {
                                            "properties": {
                                                "reason_value": { "type": "integer", "minimum": "1/value" }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "else": {
                        "properties": {
                            "facts": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "if": {
                                        "properties": {
                                            "used_for_reason": { "const": true }
                                        }
                                    },
                                    "then": {
                                        "required": ["reason_value"],
                                        "if": {
                                            "properties": {
                                                "referenced_fact_id": { "type": "string", "pattern": "_defendant$" }
                                            }
                                        },
                                        "then": {
                                            "properties": {
                                                "reason_value": { "type": "integer", "minimum": "1/value" }
                                            }
                                        },
                                        "else": {
                                            "properties": {
                                                "reason_value": { "type": "integer", "maximum": "1/value" }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "if": {
                    "properties": {
                        "winning_side": { "const": "defendant" }
                    }
                },
                "then": {
                    "properties": {
                        "id": { "type": "string", "pattern": "^_defendant$" }
                    }
                },
                "else": {
                    "properties": {
                        "id": { "type": "string", "pattern": "_plaintiff$" }
                    }
                }
            }
        }
    }
}